@model letterstocrushes.Models.LogOnModel

@{
    ViewBag.Title = "letters to crushes: login";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    <div style="width: 100%; border: 0px dotted black; height: 300px; padding: 20px">

        <div style="float: left; width: 250px; border: 0px solid red; text-align: left;">

            <div style="padding: 20px">

                <h3>login</h3>

                @using (Html.BeginForm()) {   

                            <div class="editor-field">
                                @Html.ValidationSummary(true, "")
                            </div>


                            <div class="editor-label">
                                email
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(m => m.UserName)
                                @Html.ValidationMessageFor(m => m.UserName, "Email required.")
                            </div>

                            <div class="editor-label">
                                password
                            </div>
                            <div class="editor-field">
                                @Html.PasswordFor(m => m.Password)
                                @Html.ValidationMessageFor(m => m.Password, "Password required.")
                            </div>

                    <!--
                            <div class="editor-label">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                            !-->
                    
                    
                            <div>
                                
                                <div style="float: left">

                                    <p>
                                        <input type="submit" value="login" class="submit_button" />
                                    </p>
                                
                                </div>

                                <div style="float: right; font-size: 10pt; padding-top: 7px; padding-right: 5px">

                                    <p>
                                        @Html.ActionLink("lost password", "Password", "Home")                                 
                                    </p>
                                    
                                </div>

                            
                            </div>
                }

      
            </div>

        </div>

        <div style="float: left; width: 60px; text-align: left; height: 300px">

            <div style="padding-top: 20px">


            </div>


        </div>

        <div style="float: right; width: 250px; border: 0px solid blue">

            <div style="padding-top: 20px; text-align: left">

                <h3>
                    @Html.ActionLink("sign up", "Register", "Account") 
                </h3>

                <div class="editor-label">                                    

                    <p>
                        letters will <i>always</i> be anonymous. by signing up you are able to
                        bookmark letters so you can find them again easily. 
                    </p>

                </div>


            </div>

        </div>


    </div>

        <div style="clear: both" />


    <div id="disqus_thread" class="letterComments" style="display: none"></div>

