@model letterstocrushes.Core.Model.Letter

<div class="letterEnvelopeContainer">

            <ul class="letterNav">

                @Html.Partial("_LetterVote", Model)
                @Html.Partial("_LetterMobileComments", Model)

            </ul>

            <ul class="dateNav">
                <li>
                    <a href="/mobile/letter/@(Model.Id)" data-ajax="false">@(Model.letterPostDate.ToString("MMM d"))</a>            
                </li>
            </ul>

            

    <div class="letterContainer" id="z@(Model.Id)">
        @Html.Raw(Model.letterMessage)
    </div>

</div>

