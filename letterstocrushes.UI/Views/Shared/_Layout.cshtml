    @if (User.Identity.Name == "seth")
    {
        <text>
        <script src="@Url.Content("~/Scripts/fb-login.js")"></script>
            <div style="float: right; padding: 10px">
                <div id="fb-root"></div>
                <div id="fb_login_button">
                    <fb:login-button show-faces="false" width="200" max-rows="1"></fb:login-button>
                </div>
            </div>
        </text>
    }

    <div class="page">

        <div id="header">
            <div id="title">
                <a href="@Url.Content("/")">letters to crushes</a>
            </div>

            <div id="menuContainer">

                <ul id="jsddm">
                    <li>@Html.ActionLink("send", "send", "Home")</li>
                    <li>@Html.ActionLink("more", "more", "Home")</li>
                </ul>

            </div>
        </div>

        <div id="main">
            @RenderBody()

        </div>

    </div>
            
