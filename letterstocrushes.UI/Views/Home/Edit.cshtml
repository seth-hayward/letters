@model letterstocrushes.Core.Model.Letter

@{
    ViewBag.Title = "letters to crushes: edit your letter";
}


<div class="letterContainer" id="input">

    <div id="sendLetterCopy">
        <p>Edit your letter.
        </p>
    </div>

